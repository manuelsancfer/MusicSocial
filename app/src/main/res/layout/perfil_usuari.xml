<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imagen_perfil"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:adjustViewBounds="false"
        android:scaleType="centerInside"
        android:theme="@style/Base.AlertDialog.AppCompat.Light"
        app:srcCompat="@android:color/background_dark"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/spinner"
        android:layout_alignLeft="@+id/favoritos"
        android:layout_alignStart="@+id/favoritos" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@android:drawable/btn_default"
        android:visibility="visible"
        />


    <TextView
        android:id="@+id/usernamee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="70dp"
        android:text="@string/Usuario"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/usernamee"
        android:layout_alignStart="@+id/usernamee"
        android:layout_below="@+id/usernamee"
        android:layout_marginTop="14dp"
        android:text="@string/Email"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/gustos_musicales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="12dp"
        android:text="@string/Gustos_musicales"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <View
        android:id="@+id/linia_amigos"
        android:layout_height="2sp"
        android:layout_width="wrap_content"
        android:background="#9e9b9b"
        android:layout_marginTop="50dp"
        android:layout_below="@id/gustos_musicales" />

    <View
        android:id="@+id/linia_amigos2"
        android:layout_height="2sp"
        android:layout_width="wrap_content"
        android:background="#9e9b9b"
        android:layout_marginTop="60dp"
        android:layout_below="@id/linia_amigos" />

    <TextView
        android:id="@+id/amigos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linia_amigos"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="6dp"
        android:text="@string/Amigos"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/numamigos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amigos"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="2dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/siguiendo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linia_amigos"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="6dp"
        android:text="@string/Siguiendo"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/numseguidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/siguiendo"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="255dp" />

    <TextView
        android:id="@+id/favoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linia_amigos2"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="25dp"
        android:text="@string/FAVORITOS"
        android:textSize="17sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecylerViewFavoritos"
        android:layout_width= "330sp"
        android:layout_height="180sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"
        android:layout_below="@+id/favoritos"/>

    <TextView
        android:id="@+id/espaciador"
        android:layout_below="@+id/RecylerViewFavoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        />


</RelativeLayout>